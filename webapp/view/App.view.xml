<mvc:View controllerName="opensap.movies.controller.App" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
						<Image 
							src="images/MoviesHeader.png"
							width="100%"
							tooltip="Movie illustration"> 
						</Image>
					</content>
					
					<footer>
						<Toolbar>
							<ToolbarSpacer />
								<Link text="Explore the IMDb Movie Database" href="https://www.imdb.com/"  target="_blank"/>	
							<ToolbarSpacer />
						</Toolbar>
					</footer>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>